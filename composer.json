{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.3",
        "symfony/messenger": "^7.1",
        "symfony/redis-messenger": "^7.1",
        "doctrine/doctrine-bundle": "^2.13",
        "symfony/runtime": "^7.1",
        "symfony/yaml": "^7.1",
        "symfony/flex": "^2.4",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.3",
        "symfony/twig-bundle": "^7.1",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.61",
        "phpstan/phpstan": "^1.12",
        "friendsofphp/php-cs-fixer": "^3.64",
        "squizlabs/php_codesniffer": "^3.10",
        "phpunit/phpunit": "^11.4",
        "behat/behat": "^3.14",
        "slevomat/coding-standard": "^8.15"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "test": [
            "vendor/bin/phpunit tests/PHPUnit --log-junit report.xml --do-not-cache-result",
            "vendor/bin/behat -c behat.yml.dist"
        ],
        "quality-ci": [
            "vendor/bin/phpstan analyse -c phpstan.dist.neon src --level 7",
            "vendor/bin/phpcs --no-cache ./"
        ],
        "quality": [
            "bin/console doctrine:schema:validate",
            "bin/console lint:twig templates",
            "composer quality-ci",
            "vendor/bin/phpcbf --extensions=php --tab-width=4 -sp src tests"
        ]
    }
}
